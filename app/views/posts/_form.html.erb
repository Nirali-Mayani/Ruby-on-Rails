
<%= form_with(model: @post, local: true) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
    <div class="field">
      <%= form.label :content %>
      <%= form.text_area :content %>
    </div>
    <div class="actions">
      <%= form.submit %>
    </div>

  <% if @post.new_record? %>
    <%= link_to 'Back', posts_path %>
  <% else %>
    <%= link_to 'Back', post_path(@post) %>
  <% end %>
<% end %>
